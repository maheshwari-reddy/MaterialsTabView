<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="5dp"
        android:hint="Maheshwari"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="5dp"
        android:hint="16/01:5:30"
        android:padding="5dp"
        android:textColor="#e8e8e8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTime"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/favourite"
        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/favourite"
        android:background="@drawable/message_background"
        android:padding="10dp"
        android:textStyle="italic"
        android:text="I have to leave, sorry I wont be able to attend"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/favourite"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dateTime"
        android:padding="8dp"
        android:src="@drawable/unfavourite" />

</RelativeLayout>